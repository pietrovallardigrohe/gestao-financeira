{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "configure debug",
      "type": "shell",
      "command": "qmake gestao-financeira.pro CONFIG+=debug",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "build debug",
      "type": "shell",
      "command": "mingw32-make",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "dependsOn": "configure debug"
    },
    {
      "label": "run debug",
      "type": "shell",
      "command": "${workspaceFolder}/debug/gestao-financeira.exe",
      "options": {
        "cwd": "${workspaceFolder}/debug"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "build and run debug",
      "dependsOrder": "sequence",
      "dependsOn": ["build debug", "run debug"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
